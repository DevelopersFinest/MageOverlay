<config>
	<tabs>
		<overlay translate="label" module="overlay">
			<label>Overlay</label>
			<sort_order>1000</sort_order>
		</overlay>
	</tabs>
    <sections>
    	<overlay_options translate="label" module="overlay">
    		<label>Options</label>
    		<tab>overlay</tab>
    		<frontend_type>text</frontend_type>
    		<sort_order>10</sort_order>
    		<show_in_default>1</show_in_default>
    		<show_in_website>1</show_in_website>
    		<show_in_store>1</show_in_store>
    		<groups>
    			<general>
    				<label>General</label>
    				 <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <status translate="label" module="overlay">
                            <label>Default Status</label>
                            <frontend_type>select</frontend_type>
                            <source_model>overlay/system_config_status</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Select overlay default status</comment>
                        </status>
                        <content translate="label" module="overlay">
                            <label>Default Content</label>
                            <frontend_type>select</frontend_type>
                            <source_model>overlay/system_config_content</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>0</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Select the static block to be displayed</comment>
                        </content>
                    </fields>    
    			</general>
    		</groups>
    	</overlay_options>
    </sections>
</config>